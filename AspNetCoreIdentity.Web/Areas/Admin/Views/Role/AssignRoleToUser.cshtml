
@{
    ViewData["Title"] = "AssignRoleToUser";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@model List<AdminModel.AssignRoleToUserViewModel>

<div class="row">
    <div class="col-md-6 offset-md-3">
        <h4>Kullanıcıya Rol Atama</h4>

        <hr />
        <form asp-action="AssignRoleToUser" asp-route-userId="@ViewBag.userId" method="post">
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class=" mb-3 form-check">
                    <input class="form-check-input" type="checkbox"  asp-for="@Model[i].Exist">
                    <label class="form-check-label" for="flexCheckDefault">@Model[i].Name </label>
                    <input type="hidden" asp-for="@Model[i].Name" />
                    <input type="hidden" asp-for="@Model[i].Id" />

                </div>
            }     
            <div class="form-group mt-3">
                <input type="submit" value="Rol Ata" class="btn btn-outline-primary"  />
            </div>
        </form>
        <div>
            <a class="btn btn-danger" asp-action="UserList" asp-controller="Home">Kullanıcı Listesine Geri Dön</a>
        </div>
    </div>

</div>

