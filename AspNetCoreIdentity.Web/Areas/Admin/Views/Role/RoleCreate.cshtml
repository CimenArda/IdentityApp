@model AdminModel.RoleCreateViewModel

@{
    ViewData["Title"] = "RoleCreate";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}




<div class="row">
    <div class="col-md-6 offset-md-3">
        <h4>Rol Oluşturma</h4>

        <hr />
        <form asp-action="RoleCreate" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Oluştur" class="btn btn-primary" />
            </div>
        </form>
        
        <div>
            <a class="btn btn-danger" asp-action="Index">Rol Ana Sayfasına dön</a>
        </div>
    </div>
   
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
