
@{
    ViewData["Title"] = "UserEdit";
}
@model UserEditViewModel
<div class="row">
    <div class="col-md-4 offset-md-4">
        <h1>Kullanıcı Bilgi Yenileme</h1>
        <br />
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success" role="alert">
                @TempData["SuccessMessage"]
            </div>

        }

        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
    

        <form method="post" asp-action="UserEdit" asp-controller="Member" enctype="multipart/form-data">
            <div class="row mb-3">

                <label for="UserName" class="col-md-4 col-form-label" asp-for="UserName"></label>
                <div class="col-md-8">
                    <input asp-for="UserName" class="form-control">
                    <span class="text-danger" asp-validation-for="UserName"></span>

                </div>





            </div>
            <div class="row mb-3">

                <label for="Email" class="col-md-4 col-form-label" asp-for="Email"></label>
                <div class="col-md-8">
                    <input asp-for="Email" class="form-control">
                    <span class="text-danger" asp-validation-for="Email"></span>

                </div>





            </div>
            <div class="row mb-3">

                <label for="Phone" class="col-md-4 col-form-label" asp-for="Phone"></label>
                <div class="col-md-8">
                    <input asp-for="Phone" class="form-control">
                    <span class="text-danger" asp-validation-for="Phone"></span>

                </div>





            </div>
            
            <div class="row mb-3">

                <label for="BirthDay" class="col-md-4 col-form-label" asp-for="BirthDay"></label>
                <div class="col-md-8">
                    <input asp-for="BirthDay" class="form-control">
                    <span class="text-danger" asp-validation-for="BirthDay"></span>

                </div>





            </div>
            
            <div class="row mb-3">

                <label for="City" class="col-md-4 col-form-label" asp-for="City"></label>
                <div class="col-md-8">
                    <input asp-for="City" class="form-control">
                    <span class="text-danger" asp-validation-for="City"></span>

                </div>





            </div>
            <div class="row mb-3">

                <label for="Gender" class="col-md-4 col-form-label" asp-for="Gender"></label>
                <div class="col-md-8">
                   <select class="form-control" asp-for="Gender" asp-items="ViewBag.GenderList">
                    <option value="">Cinsiyet seçiniz.</option>

                   </select>
                    <span class="text-danger" asp-validation-for="Gender"></span>

                </div>





            </div>
            <div class="row mb-3">

                <label for="Picture" class="col-md-4 col-form-label" asp-for="Picture"></label>
                <div class="col-md-8">
                    <input asp-for="Picture"  type="file" class="form-control">
                    <span class="text-danger" asp-validation-for="Picture"></span>

                </div>





            </div>

            <button type="submit" class="btn btn-primary">Güncelle</button>

        </form>

    </div>
</div>


