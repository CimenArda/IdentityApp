
@{
    ViewData["Title"] = "AccessDenied";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Yetkisiz Erişim</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: #000;
            color: #fff;
            font-family: 'Roboto', sans-serif;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .container {
            width: 400px;
            max-width: 90%;
            text-align: center;
        }

        .alert {
            background-color: #900;
            color: #fff;
            padding: 40px;
            border-radius: 15px;
            box-shadow: 0 0 20px 5px #ff0000;
        }

        h1 {
            font-size: 48px;
            margin-bottom: 30px;
        }

        p {
            font-size: 24px;
            margin-bottom: 30px;
        }

        .btn {
            background-color: #333;
            color: white;
            border: none;
            border-radius: 5px;
            padding: 15px 30px;
            font-size: 24px;
            text-decoration: none;
            transition: background-color 0.3s ease;
        }

            .btn:hover {
                background-color: #555;
            }
    </style>
</head>
<body>

    <div class="container">
        <div class="alert">
            <h1>HATA</h1>
            <p>Yetkisiz erişim! Bu sayfaya girme yetkiniz bulunmamaktadır!</p>
            
        </div>
    </div>

</body>
</html>